<UserControl x:Class="NexusFinance.Views.ProjectAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="ðŸš€ Project Analytics" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#00BCD4"/>
                    <TextBlock Text="Deep dive into project performance and costs" 
                              FontSize="14" 
                              Foreground="#606060" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- PROJECT SELECTOR -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Select Project" FontSize="16" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}" 
                                       Command="{Binding DataContext.SelectProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Background="#252526"
                                       Foreground="White"
                                       BorderThickness="2"
                                       BorderBrush="#8A2BE2"
                                       Padding="20,10"
                                       Margin="0,0,10,0"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- PROJECT SUMMARY CARDS -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Revenue -->
                <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Total Revenue" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalRevenue, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#00E676"/>
                    </StackPanel>
                </Border>

                <!-- Total Cost -->
                <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¸ Total Cost" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalCost, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#FF1744"/>
                    </StackPanel>
                </Border>

                <!-- Net Profit -->
                <Border Grid.Column="2" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Net Profit" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding NetProfit, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#8A2BE2"/>
                    </StackPanel>
                </Border>

                <!-- Profit Margin -->
                <Border Grid.Column="3" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ Profit Margin" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding ProfitMargin, StringFormat='{}{0:N1}%'}" 
                                  FontSize="26" FontWeight="Bold" Foreground="#00BCD4"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ALL PROJECTS TABLE -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ All Projects Overview" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding ProjectSummaries}"
                             AutoGenerateColumns="False"
                             Background="Transparent"
                             RowBackground="#252526"
                             AlternatingRowBackground="#2A2A2A"
                             BorderThickness="0"
                             GridLinesVisibility="None"
                             HeadersVisibility="Column"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#B0B0B0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="15"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Project Name" Binding="{Binding Name}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat='â‚½{0:N0}'}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#00E676"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat='â‚½{0:N0}'}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FF1744"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Profit" Binding="{Binding Profit, StringFormat='â‚½{0:N0}'}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#8A2BE2"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
