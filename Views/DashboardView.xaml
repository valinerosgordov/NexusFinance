<UserControl x:Class="NexusFinance.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Dashboard" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#8A2BE2"/>
                    <TextBlock Text="{Binding LastUpdated, StringFormat='Last updated: {0}'}" 
                              FontSize="14" 
                              Foreground="#606060" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- KPI CARDS -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Net Worth Card -->
                <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Net Worth" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding NetWorth, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="28" FontWeight="Bold" Foreground="#8A2BE2"/>
                        <TextBlock Text="Total Assets" FontSize="12" Foreground="#606060" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Monthly Income Card -->
                <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ Monthly Income" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding MonthlyIncome, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="28" FontWeight="Bold" Foreground="#00E676"/>
                        <TextBlock Text="+12% vs last month" FontSize="12" Foreground="#00E676" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Monthly Expense Card -->
                <Border Grid.Column="2" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¸ Monthly Expense" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding MonthlyExpense, StringFormat='â‚½{0:N0}'}" 
                                  FontSize="28" FontWeight="Bold" Foreground="#FF1744"/>
                        <TextBlock Text="-8% vs last month" FontSize="12" Foreground="#00E676" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Savings Rate Card -->
                <Border Grid.Column="3" Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’Ž Savings Rate" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding SavingsRate, StringFormat='{}{0:N1}%'}" 
                                  FontSize="28" FontWeight="Bold" Foreground="#00BCD4"/>
                        <TextBlock Text="Excellent!" FontSize="12" Foreground="#00E676" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- RECENT TRANSACTIONS -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ”„ Recent Transactions" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding RecentTransactions}"
                             AutoGenerateColumns="False"
                             Background="Transparent"
                             RowBackground="#252526"
                             AlternatingRowBackground="#2A2A2A"
                             BorderThickness="0"
                             GridLinesVisibility="None"
                             HeadersVisibility="Column"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#B0B0B0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#B0B0B0"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#8A2BE2"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Project" Binding="{Binding Project}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#00BCD4"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='â‚½{0:N0}'}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{Binding AmountColor}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- TOP EXPENSES -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ’° Top Expense Categories" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <ItemsControl ItemsSource="{Binding TopExpenses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                              Text="{Binding Name}" 
                                              FontSize="14" 
                                              Foreground="White" 
                                              VerticalAlignment="Center"/>
                                    
                                    <Border Grid.Column="1" 
                                           Background="#252526" 
                                           CornerRadius="4" 
                                           Height="24" 
                                           Margin="10,0">
                                        <Border Background="{Binding Color}" 
                                               CornerRadius="4" 
                                               HorizontalAlignment="Left"
                                               Width="{Binding Amount, Converter={StaticResource AmountToWidthConverter}}"/>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="2" 
                                              Text="{Binding Amount, StringFormat='â‚½{0:N0}'}" 
                                              FontSize="14" 
                                              FontWeight="Bold" 
                                              Foreground="{Binding Color}" 
                                              HorizontalAlignment="Right" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
