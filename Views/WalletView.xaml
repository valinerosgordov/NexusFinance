<UserControl x:Class="NexusFinance.Views.WalletView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- HEADER -->
            <Grid Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="ðŸ‘› Wallet and Investments" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="#FFD700"/>
                    <TextBlock Text="Track your accounts and investment portfolio" 
                              FontSize="14" 
                              Foreground="#606060" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- TOTAL BALANCE -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ’° Total Balance" 
                              FontSize="16" 
                              Foreground="#B0B0B0" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding TotalBalance, StringFormat='â‚½{0:N0}'}" 
                              FontSize="48" 
                              FontWeight="Bold" 
                              Foreground="#FFD700" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Across all accounts" 
                              FontSize="14" 
                              Foreground="#606060" 
                              HorizontalAlignment="Center" 
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- ACCOUNTS -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ¦ Accounts" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <ItemsControl ItemsSource="{Binding Accounts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Institution}" 
                                                      FontSize="12" 
                                                      Foreground="#B0B0B0" 
                                                      Margin="0,5,0,0"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding Balance, StringFormat='â‚½{0:N0}'}" 
                                                  FontSize="20" 
                                                  FontWeight="Bold" 
                                                  Foreground="{Binding Color}" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- INVESTMENTS -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“Š Investments" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Foreground="White"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Total Return: " 
                                      FontSize="14" 
                                      Foreground="#B0B0B0" 
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalReturn, StringFormat='â‚½{0:N0}'}" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="#00E676" 
                                      Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <ItemsControl ItemsSource="{Binding Investments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="White"/>
                                            <TextBlock FontSize="12" Foreground="#B0B0B0" Margin="0,5,0,0">
                                                <Run Text="Invested: "/>
                                                <Run Text="{Binding Invested, StringFormat='â‚½{0:N0}'}" FontWeight="SemiBold"/>
                                                <Run Text=" â†’ Current: "/>
                                                <Run Text="{Binding CurrentValue, StringFormat='â‚½{0:N0}'}" Foreground="#00E676" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="1" 
                                               Background="#00E676" 
                                               CornerRadius="4" 
                                               Padding="10,5" 
                                               Margin="0,0,20,0"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ReturnPercent, StringFormat='+{0:N1}%'}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold" 
                                                      Foreground="Black"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding CurrentValue, StringFormat='â‚½{0:N0}'}" 
                                                  FontSize="20" 
                                                  FontWeight="Bold" 
                                                  Foreground="{Binding Color}" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
