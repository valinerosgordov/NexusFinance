<UserControl x:Class="NexusFinance.Views.TransactionInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0A0A0A">
    
    <Border Background="#1E1E1E" 
           CornerRadius="12" 
           MaxWidth="600" 
           Margin="50"
           VerticalAlignment="Center">
        <StackPanel Margin="40">
            
            <!-- HEADER -->
            <TextBlock Text="âž• Add Transaction" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#8A2BE2" 
                      Margin="0,0,0,30"/>

            <!-- TYPE SELECTOR -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Transaction Type" 
                          FontSize="14" 
                          Foreground="#B0B0B0" 
                          Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" 
                           Content="ðŸ“ˆ Income" 
                           Command="{Binding SetIncomeCommand}"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="15"
                           Margin="0,0,5,0"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#252526"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                        <Setter Property="Background" Value="#00E676"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Grid.Column="1" 
                           Content="ðŸ’¸ Expense" 
                           Command="{Binding SetExpenseCommand}"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="15"
                           Margin="5,0,0,0"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#252526"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                        <Setter Property="Background" Value="#FF1744"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- DESCRIPTION -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Description" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                        Background="#252526"
                        Foreground="White"
                        BorderBrush="#8A2BE2"
                        BorderThickness="2"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- AMOUNT -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Amount (â‚½)" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                        Background="#252526"
                        Foreground="White"
                        BorderBrush="#8A2BE2"
                        BorderThickness="2"
                        Padding="15"
                        FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- PROJECT -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Project" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                <ComboBox ItemsSource="{Binding Projects}"
                         SelectedItem="{Binding SelectedProject}"
                         Background="#252526"
                         Foreground="White"
                         BorderBrush="#8A2BE2"
                         BorderThickness="2"
                         Padding="15"
                         FontSize="14">
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>

            <!-- CATEGORY -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Category" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                <ComboBox ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         Background="#252526"
                         Foreground="White"
                         BorderBrush="#8A2BE2"
                         BorderThickness="2"
                         Padding="15"
                         FontSize="14">
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>

            <!-- DATE -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Date" FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,10"/>
                <DatePicker SelectedDate="{Binding TransactionDate}"
                           Background="#252526"
                           Foreground="White"
                           BorderBrush="#8A2BE2"
                           BorderThickness="2"
                           Padding="15"
                           FontSize="14"/>
            </StackPanel>

            <!-- ADD BUTTON -->
            <Button Content="âœ… Add Transaction" 
                   Command="{Binding AddTransactionCommand}"
                   Background="#8A2BE2"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="20"
                   FontSize="18"
                   FontWeight="Bold"
                   Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="8" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9A3BF2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Border>
</UserControl>
